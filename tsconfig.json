{
  "compilerOptions": {
     "allowSyntheticDefaultImports": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "lib": [ "es2015", "dom" ,  "es2016"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["./api/server/*"]
    },
    "skipLibCheck": true,
    "stripInternal": true,
/*
    "types": [
      "@types/node",
      "meteor-typings",
      "@types/underscore",
      "@types/meteor"]*/

     "types": [
            // add node as an option
            "node","underscore"    //,"meteor","../meteor-typings"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]


    },

    "include": [
                "src/**/*.ts",
                "api/**/*.ts"
               ],
    
    "exclude": [
                "node_modules",
                "api/node_modules",
                "api"]

}





